{
  "compilerOptions": {
    "target": "es6", 
    "allowJs": true,
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "paths": {
      "firebase/*": ["node_modules/firebase/*/index"],
      "emberfire": [ "addon" ],
      "emberfire/*": [ "addon/* "],
      "*": [ "types/*" ]
    }
  },
  "include": [ "app", "addon", "tests", "types" ],
  "exclude": [ "node_modules", "**/*.spec.ts" ]
}